{% extends 'base.html.twig' %}

{% block bodyAtt %}class="fixed-left"{% endblock %}

{% block body %}

    <div id="wrapper">
        {{ include('zircosTemplate/bloquesGenerales/menuEncabezado.html.twig') }}

        {{ include('zircosTemplate/bloquesGenerales/menuIzquierdo.html.twig') }}

        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">
                    {% block content %}
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="page-title-box">
                                    <h4 class="page-title"><i class="mdi mdi-phone-incoming"></i> Crear Llamada</h4>
                                    {#<a href="{{ path('listadoLlamadas') }}">#}
                                        {#<button class="btn btn-success btn-bordered waves-effect waves-light" style="float: right;"><span class="mdi mdi-backspace"></span> Volver a todas</button>#}
                                    {#</a>#}
                                    <div class="clearfix"></div>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">
                                    <h4 class="m-t-0 header-title"><b>Datos de la llamada</b></h4>
                                    {#<h5>Fecha: {{ fecha|date('d/m/Y - H:i:s') }}</h5>#}
                                    <hr>
                                    <div class="row">
                                        <div class="col-md-12">
                                            {{ form_start(form, { 'attr': {'id':'form','class': 'form-horizontal','data-parsley-validate':'true','novalidate':'novalidate'} }) }}
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label" for="_telefono">Cliente: </label>
                                                    <div class="col-md-5">
                                                        {{ form_widget(form.clienteRel) }}
                                                    </div>
                                                    <label class="col-md-2 control-label" for="_telefono">Categoría:</label>
                                                    <div class="col-md-3">
                                                        {{ form_widget(form.categoriaRel) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label" for="_telefono">Contacto:</label>
                                                    <div class="col-md-10">
                                                        {{ form_widget(form.nombreContacto) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label" for="_telefono">Teléfono:</label>

                                                    <div class="col-md-5">
                                                        {{ form_widget(form.telefono) }}
                                                    </div>
                                                    <label class="col-md-2 control-label" for="_telefono">Extensión:</label>
                                                    <div class="col-md-3">
                                                        {{ form_widget(form.extension,{'attr':{'data-parsley-type':'number','data-parsley-maxlength':'6','data-parsley-id':'69'}}) }}
                                                        <ul class="parsley-errors-list filled" id="parsley-id-69"><li class="parsley-type">This value should be a valid number.</li></ul>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label" for="_telefono">Tema</label>
                                                    <div class="col-md-10">
                                                        {{ form_widget(form.tema,{'attr':{'rows':'5'}}) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Descripción:</label>
                                                    <div class="col-md-10">
                                                        {{ form_widget(form.descripcion,{'attr': {'rows':'5'}}) }}
                                                    </div>
                                                </div>
                                            <hr>
                                                <div class="form-group">
                                                    <div class="col-md-12">
                                                        {{ form_widget(form.btnGuardar, { 'attr': {'class': 'btn btn-success btn-bordered waves-effect w-md waves-light m-b-5','style':'float:right;margin-left:5px;'} }) }}
                                                        <a href="{{ path('listadoLlamadas') }}" class="btn btn-default btn-bordered waves-effect w-md m-b-5" style="float: right;">CANCELAR</a>
                                                    </div>
                                                </div>
                                            {{ form_rest(form) }}
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endblock content %}
                </div> <!-- container -->
            </div> <!-- content -->
        </div>
        {{ include('zircosTemplate/bloquesGenerales/pie.html.twig') }}
    </div>
{% endblock %}
