{% extends 'base.html.twig' %}

{% block bodyAtt %}class="fixed-left"{% endblock %}

{% block body %}

    <div id="wrapper">
        {{ include('zircosTemplate/bloquesGenerales/menuEncabezado.html.twig') }}

        {{ include('zircosTemplate/bloquesGenerales/menuIzquierdo.html.twig') }}
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">
                    {% block content %}
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="page-title-box">
                                    <h4 class="page-title"><i class="mdi mdi-phone-in-talk"></i> Crear Llamada</h4>
                                    <a href="{{ path('inicio') }}">
                                        <button class="btn btn-success btn-bordered waves-effect waves-light" style="float: right;"><span class="mdi mdi-backspace"></span> Volver a todas</button>
                                    </a>
                                    <div class="clearfix"></div>
                                </div><
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">
                                    <h4 class="m-t-0 header-title"><b>Datos de la llamada</b></h4>
                                    {#<h5>Fecha: {{ fecha|date('d/m/Y - H:i:s') }}</h5>#}
                                    <hr>
                                    <div class="row">
                                        <div class="col-md-6">
                                            {{ form_start(form, { 'attr': {'class': 'form-horizontal','novalidate':'novalidate'} }) }}
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label" for="_telefono">Cliente atendido</label>
                                                    <div class="col-md-10">
                                                        {{ form_widget(form.clienteRel) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label" for="_telefono">Nombre del Contacto</label>
                                                    <div class="col-md-10">
                                                        {{ form_widget(form.nombreContacto) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label" for="_telefono">Categoría de la llamada</label>
                                                    <div class="col-md-10">
                                                        {{ form_widget(form.llamadasCategoria) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label" for="_telefono">Teléfono de Contacto</label>

                                                    <div class="col-md-5">
                                                        {{ form_widget(form.telefono,{'attr': {'data-mask':'(999) 999-9999'}}  ) }}
                                                    </div>
                                                    <label class="col-md-2 control-label" for="_telefono">Extensión</label>
                                                    <div class="col-md-3">
                                                        {{ form_widget(form.extension,{'attr': {'data-mask':'(9999)'}}  ) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label" for="_telefono">Tema de la llamada</label>
                                                    <div class="col-md-10">
                                                        {{ form_widget(form.tema,{'attr': {'rows':'5'}}  ) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Descripción de la llamada</label>
                                                    <div class="col-md-10">
                                                        {{ form_widget(form.descripcion,{'attr': {'rows':'5'}}  ) }}
                                                    </div>
                                                </div>
                                                
                                            <hr>
                                                <div class="form-group">
                                                    <div class="col-md-12">
                                                        {{ form_widget(form.btnGuardar, { 'attr': {'class': 'btn btn-success btn-bordered waves-effect w-md waves-light m-b-5'} }) }}

                                                    </div>
                                                </div>
                                            {{ form_rest(form) }}
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endblock content %}
                </div> <!-- container -->
            </div> <!-- content -->
        </div>
        {{ include('zircosTemplate/bloquesGenerales/pie.html.twig') }}
    </div>
{% endblock %}