{% extends 'base.html.twig' %}

{% block bodyAtt %}class="fixed-left"{% endblock %}

{% block body %}

    <div id="wrapper">
        {{ include('zircosTemplate/bloquesGenerales/menuEncabezado.html.twig') }}

        {{ include('zircosTemplate/bloquesGenerales/menuIzquierdo.html.twig') }}
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">
                    {% block content %}
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="page-title-box">
                                    <h4 class="page-title"><i class="mdi mdi-phone-in-talk"></i> Crear Llamada</h4>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box">
                                    <h4 class="m-t-0 header-title"><b>Datos de la llamada</b></h4>
                                    <h5>Fecha: {{ "now"|date("m/d/Y") }}</h5>
                                    <hr>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <form class="form-horizontal" role="form">
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label" for="_telefono">Teléfono de Contacto</label>

                                                    <div class="col-md-5">
                                                        <input type="text"
                                                               id="_telefono"
                                                               name="_telefono"
                                                               class="form-control"
                                                               data-mask="(999) 999-9999"
                                                               required=""
                                                               autofocus=""
                                                               autocomplete="off">
                                                    </div>
                                                    <label class="col-md-2 control-label" for="_telefono">Extensión</label>
                                                    <div class="col-md-3">
                                                        <input type="text"
                                                               id="_extension"
                                                               name="_extension"
                                                               class="form-control"
                                                               data-mask="(9999)"
                                                               required=""
                                                               autofocus=""
                                                               autocomplete="off">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label" for="_telefono">Descripción</label>
                                                    <div class="col-md-10">
                                                        <textarea class="form-control" rows="5"
                                                                  id="_descripcion"
                                                                  name="_descripcion"
                                                                  class="form-control"
                                                                  required=""
                                                                  autofocus=""
                                                                  autocomplete="off">
                                                        </textarea>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Tema de la llamada</label>
                                                    <div class="col-md-10">
                                                        <textarea class="form-control" rows="5"
                                                               id="_tema"
                                                               name="_tema"
                                                               class="form-control"
                                                               required=""
                                                               autofocus=""
                                                               autocomplete="off">
                                                        </textarea>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Contacto</label>
                                                    <div class="col-md-10">
                                                        <input type="text"
                                                               id="_extension"
                                                               name="_extension"
                                                               class="form-control"
                                                               required=""
                                                               autofocus=""
                                                               autocomplete="off">
                                                    </div>
                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endblock content %}
                </div> <!-- container -->
            </div> <!-- content -->
        </div>
        {{ include('zircosTemplate/bloquesGenerales/pie.html.twig') }}
    </div>
{% endblock %}