                                    <h4 class="header-title m-t-0 m-b-30"><i class="mdi mdi-phone-in-talk"></i> Listado general de Llamadas</h4>

                                    <div class="table-responsive">
                                        <table class="table table table-hover m-0">
                                            <thead>
                                            <tr>
                                                <th>Fecha</th>
                                                <th>Cliente</th>
                                                <th>Contacto</th>
                                                <th>Categoría</th>
                                                <th>Tema</th>
                                                <th>Teléfono</th>
                                                <th>Extensión</th>
                                                <th>Descripción</th>
                                                <th>Recibe</th>
                                                <th>Gestiona</th>
                                                <th>Gestión</th>
                                                <th>Solución</th>
                                                <th>Atendido</th>
                                                <th>Solucionado</th>
                                                <th>Acción</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                                {{form_start(form) }}
                                            {% for llamada in llamadas %}

                                                <tr>
                                                    <td>{{ llamada.fechaRegistro|date('Y-m-d H:i:s') }}</td>
                                                    <td>
                                                        <h5 class="m-0">{{ llamada.clienteRel.nombreComercial }}</h5>
                                                    </td>
                                                    <td>
                                                        {{ llamada.nombreContacto }}
                                                    </td>
                                                    <td>
                                                        {% if llamada.codigoCategoriaLlamadaFk == 0 %}
                                                            <span class="label label-danger">SIN CATEGORÍA</span>
                                                        {% elseif llamada.codigoCategoriaLlamadaFk == 1 %}
                                                            <span class="label label-default">{{ llamada.categoriaRel.nombre }}</span>
                                                        {% elseif llamada.codigoCategoriaLlamadaFk == 2 %}
                                                            <span class="label label-info">{{ llamada.categoriaRel.nombre }}</span>
                                                        {% elseif llamada.codigoCategoriaLlamadaFk == 3 %}
                                                            <span class="label label-orange">{{ llamada.categoriaRel.nombre }}</span>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {{ llamada.tema }}
                                                    </td>
                                                    <td>{{ llamada.telefono }}</td>
                                                    <td>{{ llamada.extension }}</td>
                                                    <td>{{ llamada.descripcion }}</td>
                                                    <td>{{ llamada.codigoUsuarioRecibeFk }}</td>
                                                    <td>{{ llamada.codigoUsuarioAtiendeFk }}</td>
                                                    <td>{{ llamada.fechaGestion|date('Y-m-d H:i:s') }}</td>
                                                    <td>{{ llamada.fechaSolucion|date('Y-m-d H:i:s') }}</td>
                                                    <td>

                                                    {% if llamada.estadoAtendido %}
                                                    
                                                     
                                                        <button class="btn btn-success btn-xs" type="submit" name="llamadaAtender" disabled value="{{ llamada.codigoLlamadaPk }}" title="{{ llamada.usuarioAtiende.nombres}} {{llamada.usuarioAtiende.apellidos}}">
                                                            <i class="glyphicon glyphicon-thumbs-up"></i></button>
                                                           
                                                    {% else %}
                                                    
                                                        <button class="btn btn-danger btn-xs" type="submit" name="llamadaAtender"  value="{{ llamada.codigoLlamadaPk }}">
                                                            <i class="glyphicon glyphicon-thumbs-down"></i></button>
                                                            
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if llamada.estadoSolucionado == false and llamada.estadoAtendido or llamada.estadoAtendido == false %}
                                            
                                                        <button class="btn btn-danger btn-xs" type="submit" name="llamadaSolucionar" value="{{ llamada.codigoLlamadaPk }}" >
                                                            <i class="glyphicon glyphicon-thumbs-down"></i></button>
                                                        
                                                    {% else %}
                                               
                                                        <button class="btn btn-success btn-xs" type="submit" name="llamadaSolucionar" disabled value="{{ llamada.codigoLlamadaPk }}"  title="{{llamada.usuarioSoluciona.nombres}} {{llamada.usuarioSoluciona.apellidos}}">
                                                            <i class="glyphicon glyphicon-thumbs-up"></i></button>
                                                   
                                                    {% endif %}
                                                </td>
                                                    <td>
                                                        {% if llamada.estadoSolucionado == false %}
                                                            <a href="{{ path('editarLlamada', { 'codigoLlamadaPk':  llamada.codigoLlamadaPk }) }}"
                                                               class="btn btn-purple waves-effect waves-light btn-xs m-b-5"><i class="glyphicon glyphicon-pencil" style="padding: 3px;"></i>
                                                            </a>
                                                        {% else %}
                                                            <a href="{{ path('editarLlamada', { 'codigoLlamadaPk':  llamada.codigoLlamadaPk }) }}" onclick="return false" disabled=""
                                                               class="btn btn-purple waves-effect waves-light btn-xs m-b-5"><i class="glyphicon glyphicon-pencil" style="padding: 3px;"></i>
                                                            </a>
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                            {% endfor %}
