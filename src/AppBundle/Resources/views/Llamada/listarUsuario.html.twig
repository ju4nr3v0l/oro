                                                                                {% elseif llamada.codigoCategoriaLlamadaFk == 1 %}
                                                                                    <span class="label label-default">SOPORTE</span>
                                                                                {% elseif llamada.codigoCategoriaLlamadaFk == 2 %}
                                                                                    <span class="label label-info">CAPACITACIÓN</span>
                                                                                {% elseif llamada.codigoCategoriaLlamadaFk == 3 %}
                                                                                    <span class="label label-orange">BUGS</span>
                                                                                {% endif %}
                                                                            </td>
                                                                            <td>
                                                                                {% if llamada.codigoEstadoLlamadaFk == 0 or llamada.codigoEstadoLlamadaFk == null %}
                                                                                    <span class="label label-danger">SIN ATENDER</span>
                                                                                {% elseif llamada.codigoEstadoLlamadaFk == 1 %}
                                                                                    <span class="label label-orange">PENDIENTE</span>
                                                                                {% elseif llamada.codigoEstadoLlamadaFk == 2 %}
                                                                                    <span class="label label-info">ATENDIDA</span>
                                                                                {% elseif llamada.codigoEstadoLlamadaFk == 3 %}
                                                                                    <span class="label label-success">SOLUCIONADA</span>
                                                                                {% endif %}
                                                                            </td>
                                                                            <td> Recibe ({{ llamada.codigoUsuarioRecibeFk }})</td>
                                                                            <td>{{ llamada.fechaRegistro|date('Y-m-d H:i:s') }}</td>
                                                                            <td> Atendió ({{ llamada.codigoUsuarioAtiendeFk }})</td>
                                                                            <td>{{ llamada.fechaGestion|date('Y-m-d H:i:s') }}</td>
                                                                            <td>{{ llamada.fechaSolucion|date('Y-m-d H:i:s') }}</td>
                                                                            <td>
                                                                                <a href="#" class="btn btn-purple waves-effect waves-light btn-xs m-b-5"><i class="glyphicon glyphicon-pencil" style="padding: 3px;"></i></a>
                                                                                <a href="{{ path('actualizarEstadoLlamadaUsuario', { 'codigoLlamadaPk': llamada.codigoLlamadaPk }) }}"
                                                                                   class="btn btn-default waves-effect waves-light btn-xs m-b-5"><i class="glyphicon glyphicon-transfer" style="padding: 3px;"></i>
                                                                                </a>

                                                                                {#<a href="#custom-modal{{ llamada.codigoLlamadaPk }}"#}
