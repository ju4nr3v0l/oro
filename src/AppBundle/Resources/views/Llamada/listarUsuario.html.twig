{% extends 'base.html.twig' %}

{% block bodyAtt %}class="fixed-left"{% endblock %}

{% block body %}

    <div id="wrapper">
        {{ include('zircosTemplate/bloquesGenerales/menuEncabezado.html.twig') }}

        {{ include('zircosTemplate/bloquesGenerales/menuIzquierdo.html.twig') }}
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">
                    {% block content %}
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="page-title-box">
                                    <h4 class="page-title"><i class="mdi mdi-phone-classic"></i> Mis Llamadas </h4>
                                    <a href="{{ path('registrarLlamada') }}">
                                        <button class="btn btn-success btn-bordered waves-effect waves-light" style="float: right;"><span class="mdi mdi-plus"></span> Nueva </button>
                                    </a>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">

                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="card-box">
                                    <h4 class="header-title m-t-0 m-b-30">Registro de Llamadas para el usuario:

                                        {% if usuario is defined %}
                                            <span class="label label-info">{{ usuario.nombres }} {{ usuario.apellidos }}</span>
                                        {% endif %}

                                    </h4>

                                    <div class="tabs-vertical-env">
                                        <ul class="nav tabs-vertical">
                                            <li class="active">
                                                <a href="#v-pendientes" data-toggle="tab" aria-expanded="true">Pendientes:  <label class="label label-success">{{ contadores.contLlamadasPendientes }}</label></a>
                                            </li>
                                            <li class="">
                                                <a href="#v-atendidas" data-toggle="tab" aria-expanded="false">Solucionadas:  <label class="label label-success">{{ contadores.contLlamadasSolucionadas }}</label></a>
                                            </li>
                                        </ul>

                                        <div class="tab-content">
                                            <div class="tab-pane active" id="v-pendientes">
                                                <div class="col-md-12">
                                                    <div class="card-box">
                                                        <h4 class="header-title m-t-0 m-b-30"><i class="mdi mdi-phone-in-talk"></i> Registro de Llamadas</h4>

                                                        <div class="table-responsive">
                                                            <table class="table table table-hover m-0">
                                                                <thead>
                                                                <tr>
                                                                    <th>Fecha</th>
                                                                    <th>Cliente</th>
                                                                    <th>Contacto</th>
                                                                    <th>Categoría</th>
                                                                    <th>Tema</th>
                                                                    <th>Teléfono</th>
                                                                    <th>Extensión</th>
                                                                    <th>Descripción</th>
                                                                    <th>Recibe</th>
                                                                    <th>Gestiona</th>
                                                                    <th>Gestión</th>
                                                                    <th>Solución</th>
                                                                    <th>Atendido</th>
                                                                    <th>Solucionado</th>
                                                                    <th>Acción</th>
                                                                </tr>
                                                                </thead>
                                                                <tbody>
                                                                {{form_start(form)}}
                                                                {% for llamada in llamadas %}
                                                                    {% if llamada.estadoSolucionado == false %}
                                                                        <tr>
                                                                            <td>{{ llamada.fechaRegistro|date('Y-m-d H:i:s') }}</td>
                                                                            <td>
                                                                                <h5 class="m-0">{{ llamada.clienteRel.nombreComercial }}</h5>
                                                                            </td>
                                                                            <td>
                                                                                {{ llamada.nombreContacto }}
                                                                            </td>
                                                                            <td>
                                                                                {% if llamada.codigoCategoriaLlamadaFk == 0 %}
                                                                                    <span class="label label-danger">SIN CATEGORÍA</span>
                                                                                {% elseif llamada.codigoCategoriaLlamadaFk == 1 %}
                                                                                    <span class="label label-default">{{ llamada.categoriaRel.nombre }}</span>
                                                                                {% elseif llamada.codigoCategoriaLlamadaFk == 2 %}
                                                                                    <span class="label label-info">{{ llamada.categoriaRel.nombre }}</span>
                                                                                {% elseif llamada.codigoCategoriaLlamadaFk == 3 %}
                                                                                    <span class="label label-orange">{{ llamada.categoriaRel.nombre }}</span>
                                                                                {% endif %}
                                                                            </td>
                                                                            <td>
                                                                                {{ llamada.tema }}
                                                                            </td>
                                                                            <td>{{ llamada.telefono }}</td>
                                                                            <td>{{ llamada.extension }}</td>
                                                                            <td>{{ llamada.descripcion }}</td>
                                                                            <td>{{ llamada.codigoUsuarioRecibeFk }}</td>
                                                                            <td>{{ llamada.codigoUsuarioAtiendeFk }}</td>
                                                                            <td>{{ llamada.fechaGestion|date('Y-m-d H:i:s') }}</td>
                                                                            <td>{{ llamada.fechaSolucion|date('Y-m-d H:i:s') }}</td>
                                                                            <td>

                                                                                {% if llamada.estadoAtendido %}
                                                                                
                                                                                 
                                                                                    <button class="btn btn-success btn-xs" type="submit" name="llamadaAtender" disabled value="{{ llamada.codigoLlamadaPk }}">
                                                                                        <i class="glyphicon glyphicon-thumbs-up"></i></button>
                                                                                       
                                                                                {% else %}
                                                                                
                                                                                    <button class="btn btn-danger btn-xs" type="submit" name="llamadaAtender"  value="{{ llamada.codigoLlamadaPk }}">
                                                                                        <i class="glyphicon glyphicon-thumbs-down"></i></button>
                                                                                        
                                                                                {% endif %}
                                                                            </td>
                                                                            <td>
                                                                                {% if llamada.estadoSolucionado == false and llamada.estadoAtendido or llamada.estadoAtendido == false %}
                                                                        
                                                                                    <button class="btn btn-danger btn-xs" type="submit" name="llamadaSolucionar" value="{{ llamada.codigoLlamadaPk }}">
                                                                                        <i class="glyphicon glyphicon-thumbs-down"></i></button>
                                                                                    
                                                                                {% else %}
                                                                           
                                                                                    <button class="btn btn-success btn-xs" type="submit" name="llamadaSolucionar" disabled value="{{ llamada.codigoLlamadaPk }}">
                                                                                        <i class="glyphicon glyphicon-thumbs-up"></i></button>
                                                                               
                                                                                {% endif %}
                                                                            </td>
                                                                            <td>
                                                                                {% if llamada.estadoSolucionado == false and llamada.estadoAtendido == false %}
                                                                                    <a href="{{ path('registrarLlamada', { 'codigoLlamadaPk':  llamada.codigoLlamadaPk }) }}"
                                                                                       class="btn btn-purple waves-effect waves-light btn-xs m-b-5"><i class="glyphicon glyphicon-pencil" style="padding: 3px;"></i>
                                                                                    </a>
                                                                                {% else %}
                                                                                    <a href="{{ path('registrarLlamada', { 'codigoLlamadaPk':  llamada.codigoLlamadaPk }) }}" onclick="return false" disabled=""
                                                                                       class="btn btn-purple waves-effect waves-light btn-xs m-b-5"><i class="glyphicon glyphicon-pencil" style="padding: 3px;"></i>
                                                                                    </a>
                                                                                {% endif %}
                                                                            </td>
                                                                        </tr>
                                                                    {% endif %}
                                                                {% endfor %}
                                                                {{form_end(form)}}
                                                                </tbody>
                                                            </table>
                                                        </div> <!-- table-responsive -->
                                                    </div> <!-- end card -->
                                                </div>
                                                <!-- end col -->
                                            </div>
                                            <div class="tab-pane" id="v-atendidas">

