                                                                                {% else %}
                                                                           
                                                                                    <button class="btn btn-success btn-xs" type="submit" name="llamadaSolucionar" disabled value="{{ llamada.codigoLlamadaPk }}">
                                                                                        <i class="glyphicon glyphicon-thumbs-up"></i></button>
                                                                               
                                                                                {% endif %}
                                                                            </td>
                                                                            <td>
                                                                                {% if llamada.estadoSolucionado == false %}
